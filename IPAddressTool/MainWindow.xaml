<Window x:Class="IPAddressTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPAddressTool"
        mc:Ignorable="d"
        Title="IP Address Tool" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="networkFirstBox" HorizontalAlignment="Left" Height="20" Margin="18,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <Button x:Name="networkFirstButton" Content="Solve" HorizontalAlignment="Left" Margin="189,33,0,0" VerticalAlignment="Top" Width="75" Click="networkFirstButton_Click" />
        <Label x:Name="networkFirstLabel" Content="Solve Network Address and First Usable Address" HorizontalAlignment="Left" Margin="18,7,0,0" VerticalAlignment="Top" Width="298" RenderTransformOrigin="0.202,0.657"/>
        <TextBlock x:Name="networkAddress" HorizontalAlignment="Left" Margin="18,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <TextBlock x:Name="firstAddress" HorizontalAlignment="Left" Margin="18,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>

    </Grid>
</Window>
